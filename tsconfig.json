{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext", "dom.asynciterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowImportingTsExtensions": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*", "./openDAW/studio/src/*"],
      "@/data/pointers": ["./openDAW/studio/src/data/pointers"],
      "@/data/enums": ["./openDAW/studio/src/data/enums"],
      "box-forge": ["./openDAW/lib/box-forge/src/index"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "openDAW/**/*.d.ts"],
  "exclude": ["node_modules", "aws-cdk-simple", "aws-cdk", "cdk.out", "services"]
}
