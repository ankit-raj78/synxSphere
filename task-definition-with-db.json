{
    "family": "syncsphere-task",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "1024",
    "memory": "2048",
    "executionRoleArn": "arn:aws:iam::710668641038:role/ecsTaskExecutionRole",
    "containerDefinitions": [
        {
            "name": "syncsphere",
            "image": "710668641038.dkr.ecr.us-east-1.amazonaws.com/syncsphere:latest",
            "portMappings": [
                {
                    "containerPort": 3000,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/syncsphere",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "environment": [
                {
                    "name": "NODE_ENV",
                    "value": "production"
                },
                {
                    "name": "PORT",
                    "value": "3000"
                },
                {
                    "name": "DATABASE_URL",
                    "value": "postgresql://syncsphere_admin:SyncSphere2024@syncsphere-db.cihsiys48bkn.us-east-1.rds.amazonaws.com:5432/syncsphere"
                },
                {
                    "name": "POSTGRES_HOST",
                    "value": "syncsphere-db.cihsiys48bkn.us-east-1.rds.amazonaws.com"
                },
                {
                    "name": "POSTGRES_PORT",
                    "value": "5432"
                },
                {
                    "name": "POSTGRES_DB",
                    "value": "syncsphere"
                },
                {
                    "name": "POSTGRES_USER",
                    "value": "syncsphere_admin"
                },
                {
                    "name": "POSTGRES_PASSWORD",
                    "value": "SyncSphere2024"
                }
            ]
        }
    ]
}
