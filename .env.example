# Environment Configuration Template
# Copy this to .env and fill in your values

# ======================
# Application Settings
# ======================
PORT=3000
NODE_ENV=development
APP_NAME=synxsphere
APP_VERSION=1.0.0
LOG_LEVEL=info

# ======================
# Database Configuration
# ======================
# PostgreSQL (Required)
DATABASE_URL=postgresql://username:password@localhost:5432/synxsphere
DB_POOL_SIZE=20
DB_CONNECTION_TIMEOUT=10000

# MongoDB (Optional)
# MONGODB_URL=mongodb://localhost:27017
# MONGODB_DATABASE=synxsphere
# MONGODB_POOL_SIZE=10
# MONGODB_TIMEOUT=5000

# Redis (Optional)
# REDIS_URL=redis://localhost:6379
# REDIS_TTL=3600
# REDIS_MAX_RETRIES=3

# ======================
# Authentication
# ======================
# Generate a secure 32+ character secret
JWT_SECRET=your-super-secret-jwt-key-must-be-at-least-32-characters-long
JWT_EXPIRATION=7d
REFRESH_TOKEN_EXPIRATION=30d
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# ======================
# Audio Processing
# ======================
AUDIO_MAX_FILE_SIZE=104857600
AUDIO_ALLOWED_FORMATS=mp3,wav,flac,m4a,ogg
AUDIO_PROCESSING_TIMEOUT=300000
AUDIO_STORAGE_PROVIDER=local
AUDIO_STORAGE_PATH=./uploads
AUDIO_ANALYSIS_ENABLED=true
AUDIO_ANALYSIS_PROVIDER=local
AUDIO_ANALYSIS_TIMEOUT=120000

# ======================
# WebSocket Configuration
# ======================
WS_PING_INTERVAL=25000
WS_PING_TIMEOUT=60000
WS_MAX_CONNECTIONS=1000
WS_CORS_ORIGINS=http://localhost:3000,http://localhost:3001
WS_CORS_CREDENTIALS=true

# ======================
# Email Configuration (Optional)
# ======================
# EMAIL_PROVIDER=smtp
# EMAIL_FROM=noreply@synxsphere.com
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# ======================
# Monitoring (Optional)
# ======================
# MONITORING_ENABLED=false
# MONITORING_PROVIDER=datadog
# MONITORING_API_KEY=your-monitoring-api-key
# MONITORING_SAMPLE_RATE=0.1

# ======================
# Security Settings
# ======================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS=false
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With
HELMET_ENABLED=true
HELMET_CSP=true
HELMET_COEP=false

# ======================
# Development Settings
# ======================
# Set to true to enable debug logging
DEBUG=false

# ======================
# Production Settings
# ======================
# For production, ensure you have:
# - Secure JWT_SECRET (32+ characters)
# - Proper DATABASE_URL with SSL
# - CORS_ORIGINS set to your domain
# - LOG_LEVEL=error or warn
# - All optional services configured if used
